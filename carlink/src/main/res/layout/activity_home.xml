<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/project_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#000000">

        <com.huawei.hicarsdk.HiSightSurfaceView
            android:id="@+id/surface"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fragmentFL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 加载Fragment -->
        <fragment
            android:id="@+id/fragment"
            android:name="com.zeekrlife.carlink.ui.fragment.PinFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
    <Button
        android:id="@+id/connect_btn"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="开始连接"
        android:layout_centerInParent="true"
        android:textColor="#FFFFFF"/>


    <Button
        android:id="@+id/exit_btn"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="退出"
        android:gravity="center"
        android:layout_below="@+id/connect_btn"
        android:layout_alignLeft="@+id/connect_btn"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/pin_text"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_above="@+id/connect_btn"
        android:layout_alignLeft="@+id/connect_btn"
        android:textColor="#FFFFFF"/>

</RelativeLayout>