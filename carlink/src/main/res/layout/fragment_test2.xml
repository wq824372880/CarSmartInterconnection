<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.zeekrlife.carlink.app.widget.SettingBar
                app:bar_lineVisible="true"
                android:layout_marginStart="@dimen/helper.dp.16"
                android:background="@color/color_F5F5F5"
                android:id="@+id/setting_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                app:bar_leftText="左文本"
                app:bar_leftDrawablePadding="@dimen/dp_10"
                app:bar_leftDrawable="@drawable/arrows_left_ic"
                app:bar_leftDrawableSize="@dimen/dp.30"
                app:bar_rightDrawable="@drawable/arrows_right_ic"
                app:bar_rightText="右文本" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp.15"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/ButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="普通按钮" />

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/ButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:enabled="false"
                    android:text="禁用了的按钮" />

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/RectButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="不带圆角的" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp.15"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:checked="true"
                    app:buttonCompat="@drawable/checkbox_selector" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp.20"
                    android:background="@null"
                    app:buttonCompat="@drawable/checkbox_selector" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:enabled="false"
                    app:buttonCompat="@drawable/checkbox_selector" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp.15"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@drawable/radiobutton_selector"
                    android:checked="true" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp.20"
                    android:background="@null"
                    android:button="@drawable/radiobutton_selector" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@drawable/radiobutton_selector"
                    android:enabled="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp.15"
                android:gravity="center"
                android:orientation="horizontal">

                <com.zeekrlife.carlink.app.widget.SwitchButton
                    android:id="@+id/sb_find_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:checked="true" />

                <com.zeekrlife.carlink.app.widget.SwitchButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:checked="false" />

                <com.zeekrlife.carlink.app.widget.SwitchButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:enabled="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp.20"
                android:gravity="center"
                android:orientation="horizontal">

                <com.zeekrlife.carlink.app.widget.CountdownView
                    android:id="@+id/cv_find_countdown"
                    style="@style/CountdownViewStyle" />

                <com.zeekrlife.carlink.app.widget.CountdownView
                    style="@style/CountdownViewStyle"
                    android:enabled="false" />

            </LinearLayout>

            <com.zeekrlife.carlink.app.widget.SimpleRatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp.20"
                app:grade="2.5"
                app:gradeStep="half" />

            <com.zeekrlife.carlink.app.widget.SimpleRatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp.20"
                app:grade="3"
                app:gradeStep="one" />

            <com.zeekrlife.carlink.app.widget.DrawableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp.20"
                android:drawableStart="@drawable/avatar_placeholder_ic"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="支持限定 Drawable 大小的 TextView"
                app:drawableHeight="@dimen/dp.20"
                app:drawableWidth="@dimen/dp.20" />

            <com.hjq.shape.view.ShapeTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp.20"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:text="支持在布局直接定义 Shape 的 TextView"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dp.13"
                app:shape="rectangle"
                app:shape_angle="0"
                app:shape_centerX="0.5"
                app:shape_centerY="0.5"
                app:shape_endColor="@color/common_accent_color"
                app:shape_radius="@dimen/dp.20"
                app:shape_startColor="@color/common_button_pressed_color" />

            <com.hjq.shape.view.ShapeTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp.20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp.20"
                android:gravity="center"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:text="我是带阴影背景的控件"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:shape="rectangle"
                app:shape_radius="@dimen/dp_10"
                app:shape_shadowColor="@color/black10"
                app:shape_shadowSize="10dp"
                app:shape_solidColor="@color/colorWhite" />

            <com.zeekrlife.carlink.app.widget.ClearEditText
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:text="这是一个带清除的按钮的EditText" />

            <com.zeekrlife.carlink.app.widget.PasswordEditText
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:maxLength="20"
                android:singleLine="true"
                android:text="78797078" />

            <com.zeekrlife.carlink.app.widget.RegexEditText
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp.20"
                android:hint="这里只能输入手机号（只能以 1 开头）"
                app:regexType="mobile" />

            <com.zeekrlife.carlink.app.widget.RegexEditText
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:hint="这里只能输入中文（普通的中文字符）"
                app:regexType="chinese" />

            <com.zeekrlife.carlink.app.widget.RegexEditText
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:hint="这里只能输入英文（大写和小写的英文）"
                app:regexType="english" />

            <com.zeekrlife.carlink.app.widget.RegexEditText
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:hint="这里只能输入数字（只允许输入纯数字）"
                app:regexType="number" />

            <com.zeekrlife.carlink.app.widget.RegexEditText
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:hint="这里只能输入数量（非 0 开头的数字）"
                app:regexType="count" />

            <com.zeekrlife.carlink.app.widget.RegexEditText
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:hint="这里只能输入用户名（中文、英文、数字）"
                app:regexType="name" />

            <com.zeekrlife.carlink.app.widget.RegexEditText
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:hint="这里只能输入非空格的字符"
                app:regexType="nonnull" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp.20"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="这是一条华丽的分割线" />

            <View style="@style/HorizontalLineStyle" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>