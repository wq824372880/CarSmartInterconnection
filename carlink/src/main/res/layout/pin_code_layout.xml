<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.zeekrlife.carlink.ui.viewmodel.PinViewModel" />
        <import type="android.view.View"/>
        <import type="com.zeekrlife.carlink.data.PageType"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/hiCarTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="82dp"
            android:textColor="#383A3D"
            android:textSize="48sp"
            android:text="@string/hi_car_title_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/connectCodeView" />

        <com.zeekrlife.carlink.app.widget.ConnectCodeView
            android:id="@+id/connectCodeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:viewBindingIgnore="true"
            android:layout_marginHorizontal="178dp"
            android:layout_marginTop="51dp"
            android:visibility="@{(vm.pageType == PageType.HICAR_CONNECT || vm.pageType == PageType.CONNECTION_CODE_GET_FAILED || vm.pageType == PageType.HICAR_CONNECTION_FAILED ) ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintTop_toBottomOf="@+id/hiCarTitleTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--断开连接 -->
        <View
            android:id="@+id/disconnectSpace"
            android:layout_width="0dp"
            android:layout_height="231dp"
            android:background="@color/black"
            android:layout_marginHorizontal="178dp"
            android:layout_marginTop="51dp"
            app:layout_constraintTop_toBottomOf="@+id/hiCarTitleTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/disconnectDeviceNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:textSize="28sp"
            android:textColor="@color/color_383A3D"
            app:layout_constraintStart_toStartOf="@id/disconnectSpace"
            app:layout_constraintTop_toTopOf="@id/disconnectSpace"
            app:layout_constraintBottom_toBottomOf="@id/disconnectSpace"
            tools:text="HUAWEI P100 Pro Max Ultra Plus"/>
        <com.zeekr.component.button.ZeekrButton
            android:id="@+id/disconnectDeviceButton"
            style="@style/Widget.ZeekrButton.Primary"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:text="@string/disconnect"
            android:layout_marginEnd="48dp"
            android:onClick="@{()->vm.retryClick()}"
            app:layout_constraintTop_toTopOf="@id/disconnectSpace"
            app:layout_constraintBottom_toBottomOf="@id/disconnectSpace"
            app:layout_constraintEnd_toEndOf="@id/disconnectSpace" />
        <androidx.constraintlayout.widget.Group
            android:id="@+id/disconnectGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{(vm.pageType == PageType.HICAR_DISCONNECT) ? View.VISIBLE : View.GONE}"
            app:constraint_referenced_ids="disconnectSpace,disconnectDeviceNameTV,disconnectDeviceButton"
            />

        <include
            android:id="@+id/connectNoticeLayout"
            layout="@layout/hi_car_connect_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:viewModel="@{vm}"/>

        <include
            android:id="@+id/pinErrorNoticeLayout"
            layout="@layout/hi_car_pin_error_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:viewModel="@{vm}"/>

        <include
            android:id="@+id/connectErrorNoticeLayout"
            layout="@layout/hi_car_connect_error_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:viewModel="@{vm}"/>

        <com.zeekr.component.button.ZeekrButton
            android:id="@+id/pinCloseButton"
            style="@style/Widget.ZeekrButton.OutlinedButton.Border"
            android:layout_width="320dp"
            android:layout_height="64dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="78dp"
            android:text="@string/close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pinRetryButton"
            app:layout_constraintHorizontal_chainStyle="packed" />

        <com.zeekr.component.button.ZeekrButton
            android:id="@+id/pinRetryButton"
            style="@style/Widget.ZeekrButton.Primary"
            android:layout_width="320dp"
            android:layout_height="64dp"
            android:text="@string/retry"
            android:visibility="@{vm.showPinRetryButton() ? View.VISIBLE : View.GONE}"
            android:onClick="@{()->vm.retryClick()}"
            app:layout_constraintStart_toEndOf="@id/pinCloseButton"
            app:layout_constraintBottom_toBottomOf="@id/pinCloseButton"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>