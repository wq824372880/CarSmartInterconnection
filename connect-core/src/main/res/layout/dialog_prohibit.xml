<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1080dp"
    android:background="@drawable/dialog_prohibit_bg"
    android:layout_height="600dp"
    tools:ignore="MissingDefaultResource">


    <ImageView
        android:id="@+id/iv_mention"
        android:layout_width="125dp"
        android:src="@drawable/ic_mention"
        android:scaleType="fitXY"
        android:layout_marginTop="102dp"
        android:layout_centerHorizontal="true"
        android:layout_height="110dp"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/tv_mention"
        android:layout_below="@+id/iv_mention"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:textSize="36sp"
        android:text="为了您和他人的安全，请不要在驾驶过程中观看视频！"
        android:textColor="@color/primary"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvConfirm"
        android:textColor="@color/dialog_content_tv"
        android:gravity="center"
        android:textSize="36sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_confirm_exit"
        android:layout_marginHorizontal="70dp"
        android:layout_width="match_parent"
        android:layout_height="108dp" />
</RelativeLayout>